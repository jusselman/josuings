<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Flight</label>
  <label>Airline</label>
  <select name="airline">
    <option value="United">United</option>
    <option value="Southwest">Southwest</option>
    <option value="Alaskan">Alaskan</option>
    <option value="JetBlue">JetBlue</option>
  </select>

  <label>Place of Departure</label>
  <select name="origin">
    <option value="PDX">PDX</option>
    <option value="LAX">LAX</option>
    <option value="ATX">ATX</option>
    <option value="SFO">SFO</option>
  </select>

  <input type="number" name="flightNo">
  <input type="datetime-local" name="departs">

  <input type="submit" value="Add Flight">
</form>

<%- include('../partials/footer') %>